<% @bottles.each do |bottle| %>
<div class="bottle_listing">
  <img src="<%= asset_path('bottles/' + bottle.image_path) %>" />
  <h1><%= bottle.name %></h1>
  <h2>by <%= bottle.company.name %></h2>
  <p><b>Color</b>: <%= bottle.color %><br />
  <b>Price</b>: <%= get_price(bottle.price) %></p>
  
  <ul class="bottle_commands">
    <li class="command_show">
      <%= link_to 'I', bottle, {:title => "Show"} %>
    </li>
    <li class="command_edit">
      <%= link_to 'Y', edit_bottle_path(bottle), {:title => "Edit"} %>
    </li>
    <li class="command_delete">
      <%= link_to 'D', bottle, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  </ul>
</div>
<% end %>

