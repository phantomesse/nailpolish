<%= form_for(@bottle) do |f| %>
  <% if @bottle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bottle.errors.count, "error") %> prohibited this bottle from being saved:</h2>

      <ul>
      <% @bottle.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :company_id %>
    <%= f.collection_select :company_id, Company.all, :id, :name %><br />
  </div>
  
  <br />
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %><br />
  </div>
  
  <br />
  
  <div class="field">
    <%= f.label :color %><br />
    <% nailpolish_colors.each do |nailpolish_color| %>
      <%= f.radio_button :color, nailpolish_color %>
      <%= f.label(:color, nailpolish_color) %><br />
    <% end %>
  </div>
  
  <br />
  
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %><br />
  </div>
  
  <br />
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
