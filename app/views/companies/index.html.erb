<div class="container">
  <div class="row">
    <div class="span12">
      <h1>Explore Companies</h1>
    </div>
  </div>
  
  <br />
  
  <div class="row">
    <div class="span12">
      <% @companies.each do |company| %>
        <%= render 'company', :company => company %>
      <% end %>
      
      <div class="add-company">
        <%= link_to new_company_path do %>
          <i class="icon-plus-sign"></i>
        <% end %>
      </div>
    </div>
  </div>
    
</div>
