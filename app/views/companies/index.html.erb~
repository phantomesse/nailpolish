<h1>Listing Companies</h1>

<% @companies.each do |company| %>
<div class="company_listing">
  <img src="<%= asset_path('companies/' + company.image_path) %>" />
  <h1><%= company.name %></h1>
  
  <ul class="company_commands">
    <li class="command_show">
      <%= link_to 'I', company, {:title => "Show"} %>
    </li>
    <li class="command_edit">
      <%= link_to 'Y', edit_company_path(company), {:title => "Edit"} %>
    </li>
    <li class="command_delete">
      <%= link_to 'D', company, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  </ul>
</div>
<% end %>

<div id="add">
  <p><%= link_to '+', new_company_path %></p>
</div>
