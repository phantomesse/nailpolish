<p id="notice"><%= notice %></p>

<div class="accent-wall">
  <div class="container">
    <div class="row">
      <div class="span6 offset3">
        <% @user = User.find(@selection.user_id) %>
      
        <h1><%= @selection.name %></h1>
        <h2>by <%= link_to @user.name, @user %></h2>
        
        <%= link_to edit_selection_path(@selection), :id => "actions-edit", :class => "btn" do %>
          <i class="icon-pencil"></i>
        <% end %>
        
      </div>
    </div>
  </div>
</div>

<br />

<div class="container">
  <div class="row">
    <div class="span12">
      <%
        @selection.bottle_ids.each do |bottle_id|
        bottle = Bottle.find(bottle_id)
      %>
        <%= render 'bottles/bottle', :bottle => bottle %>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="span12">
      <% @share_url = "#{request.protocol}#{request.host_with_port}/selections/#{@selection.public_url}" %>
      <b>Share this selection</b>: <a href="<%= @share_url %>"><%= @share_url %></a>
    </div>
  </div>
</div>
